{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "rootDirs": ["./src", "./tests"],
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "skipLibCheck": true
  },
  "exclude": ["tests"]
}
