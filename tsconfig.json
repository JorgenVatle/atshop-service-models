{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "rootDir": "src/",
    "rootDirs": [
      "tests",
      "src"
    ],
    "outDir": "dist/",

    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "skipLibCheck": true,

    "inlineSourceMap": false,
    "inlineSources": false
  },
  "exclude": ["jest.config.ts"],
}
